{
    "info": {
        "_postman_id": "facta-ai-backend-collection",
        "name": "Facta AI Backend",
        "description": "API collection for Facta AI Backend services including claim analysis, queue monitoring, and health checks.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Analysis",
            "item": [
                {
                    "name": "Submit Claim for Analysis",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"claim\": \"The moon is made of cheese.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/analysis",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "analysis"
                            ]
                        },
                        "description": "Submit a text claim for fact-checking analysis. Returns a job ID or cached result."
                    },
                    "response": []
                },
                {
                    "name": "Submit Claim (Sync)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"claim\": \"The moon is made of cheese.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/analysis/sync",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "analysis",
                                "sync"
                            ]
                        },
                        "description": "Submit a text claim and wait for the final result (Synchronous)."
                    },
                    "response": []
                },
                {
                    "name": "Get Analysis Status/Result",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/analysis/:jobId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "analysis",
                                ":jobId"
                            ],
                            "variable": [
                                {
                                    "key": "jobId",
                                    "value": "1",
                                    "description": "The Job ID returned from the submit endpoint"
                                }
                            ]
                        },
                        "description": "Check the status of an analysis job or retrieve the result if completed."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Blog",
            "item": [
                {
                    "name": "Generate Blog",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"claim\": \"The earth is flat.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/blog/generate",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blog",
                                "generate"
                            ]
                        },
                        "description": "Generate a new blog post from a claim."
                    },
                    "response": []
                },
                {
                    "name": "Get Blog List",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/blog/list",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blog",
                                "list"
                            ]
                        },
                        "description": "Get a list of all generated blog posts (metadata only)."
                    },
                    "response": []
                },
                {
                    "name": "Get Blog By ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/blog/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "blog",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "UUID_HERE",
                                    "description": "The UUID of the blog post"
                                }
                            ]
                        },
                        "description": "Get the full content of a specific blog post."
                    },
                    "response": []
                }
            ]
        },
